<?xml version="1.0" encoding="utf-8"?>
<PluginPackage xmlns="http://www.sdl.com/Plugins/PluginPackage/1.0">
	<PlugInName>Localyzer Connect for Trados</PlugInName>
	<Version>1.0.0.0</Version>
	<Description>Provides real-time preview for LRM_INCONTEXT URLs in .pxml and .sdlxliff files.</Description>
	<Author>multifarious</Author>
	<RequiredProduct name="TradosStudio" minversion="18.0" maxversion="18.9" />
	<Components>
		<Component type="Sdl.FileTypeSupport.Framework.IntegrationApi.IFileTypeComponentBuilder"
				   class="Lingoport.LocalyzerConnect.Preview.PreviewComponentBuilder, Localyzer.Connect.Trados">
			<FileTypeDefinitions>
				<FileTypeDefinition id="LRM_INCONTEXT_v6.0" fileExtension="pxml" />
				<FileTypeDefinition id="SDL XLIFF 1.0 v 1.0.0.0" fileExtension="sdlxliff" />
			</FileTypeDefinitions>
		</Component>
	</Components>
</PluginPackage>